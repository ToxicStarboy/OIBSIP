<%- include("header") %>

<body>
    <style>
body{
background-color: rgb(182, 255, 255);}

.todo-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
}

.todo {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: white;
  padding: 20px;
  border-radius: 10px;
  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.3);
  width: 40%;
  max-width: 600px;
  font-size: 16px;
  margin: 0;
  padding-top: 5px;
}

.status {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin: 7px 0;
  font-size: 20px;
}

.status form {
  margin-left: 10px;
}

.todo-header {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin: 20px 0;
}

.todo-header input[type="text"],
.todo-header input[type="number"],
.todo-header button[type="submit"] {
  margin-right: 10px;
  padding: 10px;
  border-radius: 5px;
  border: 2px solid black;
}

.todo-header input[type="text"],
.todo-header input[type="number"] {
  width: 70%;
}

.todo-header button[type="submit"] {
  background-color: #4CAF50;
  color: white;
  cursor: pointer;
  width: 150px;
  transition: background-color 0.3s ease;
}

.todo-header button[type="submit"]:hover {
  background-color: #3e8e41;
}

.delete {
  margin-left: 10px;
  padding: 11px;
  border-radius: 5px;
  border: 1px solid rgb(215, 12, 12);
  background-color: #f44336;
  color: white;
  cursor: pointer;
  transition: background-color 0.3s ease;
}

.delete:hover {
  background-color: #c62828;
}

.todo-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 10px;
  /* width: 100%; */
}

.todo-item-text {
  font-size: 20px;
}

.todo-item-priority {
  font-weight: bold;
  margin-right: 10px;
}

.todo-item-status {
  font-weight: bold;
}

.todo-item-status.completed {
  color: green;
}

.todo-item-status.canceled {
  color: red;
}

.todo-header select {
  padding: 10px;
  border-radius: 5px;
  border: none;
  margin-right: 10px;
}

a{
    text-decoration: none;
}

.complete-btn {
        background-color: #4CAF50;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
    }
    .complete-btn:hover {
        background-color: #3e8e41;
    }

    </style>
<div class="todo-container">
<h2>To-Do List</h2>
<div class="todo">
<form action="/tasks" method="POST" class="todo-header" autocomplete="off">
    <input type="text" placeholder="Add tasks" name="text" required>
    <!-- <input type="number" placeholder="Add priority" name="priority" required> -->
    <button type="submit" onChange="this.form.submit()">Add</button>
</form>
<% if(todoTasks){ %>
    <%let index=0%>
    <% todoTasks.forEach(task=>{ %>
        <div class="status">
            <% index=index+1; %>
            <% let status; %>   %>
           <% if (task.status === "completed") {  %>
           <%   status = "[✔️]";  %>
           <!-- <% } else if (task.status === "canceled") {  %>
           <%   status = "[❌]";  %> -->
           <% } else {  %>
           <%   status = "[🕒]";  %>
           <% }  %>
            <!-- <div><%=index%>. <%= task.text %> (<%= task.priority %>) <%= status %>  -->
            <div><%=index%>. <%= task.text %> <%= status %> 
                <form action="/tasks/change" method="POST" value="<%= task._id%>">
                    <!-- <select name="todoStatus" >
                        <option value="select">Select the status</option>
                        <option value="pending">Pending</option>
                      <option value="completed">Completed</option>
                      <option value="canceled">Cancelled</option>
                    </select> -->
                    <button type="submit" name="todoStatus" value="<%=task._id%>"  onChange="this.form.submit()" class="complete-btn">Completed</button>
              </form>
              
            <form action="/tasks/delete" method="POST" value="<%= task._id%>">
                    <button type="submit" name="deleteButton" value="<%=task._id%>" onChange="this.form.submit()" class="delete">Delete</button>
            </form>
        </div>
        </div>
        <%  }) %>
        <% } %>
        <br>
        <div class="status"><a href="/report" role="button">Completed Tasks</a></div>
    </div>
</div>
</body>