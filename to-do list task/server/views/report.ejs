<%- include("header") %>
<style>
  body {
      font-family: Arial, sans-serif;
  }
  h2 {
      color: #333;
  }
  .reportTask {
      margin-bottom: 10px;
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 5px;
      background-color: #f8f8f8;
      box-shadow: 2px 2px 2px rgba(0,0,0,0.1);
      width: 20%;
    font-size: 20px;
    flex-direction: column;
    align-items: center;
  }
  .completed {
      color: green;
      font-weight: bold;
  }
  .container{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }
</style>

<div class="container">
  <h2>Completed Tasks:</h2>
  <% if(todoTasksSort){ %>
      <% let index=0 %>
      <% todoTasksSort.forEach(task=>{ %>
          <% if (task.status === "completed") { %>
              <div class="reportTask">
                  <% index=index+1; %>
                  <span class="completed">[✔️] Completed</span>
                  <%=index%>. <%= task.text %>
              </div>
          <% } %>
      <% }) %>
  <% } %>
</div>
